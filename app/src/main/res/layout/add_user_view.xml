<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#336699">

    <EditText
        android:layout_width="300dp"
        android:hint="Type here you name"
        android:layout_height="wrap_content"
        android:id="@+id/nameText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp" />

    <EditText
        android:layout_width="300dp"
        android:hint="Type here you surname"
        android:layout_height="wrap_content"
        android:id="@+id/surnameText"
        android:layout_below="@+id/nameText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp" />

    <EditText
        android:layout_width="300dp"
        android:hint="Type here you phone number"
        android:layout_height="wrap_content"
        android:id="@+id/phoneText"
        android:layout_below="@+id/surnameText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Add user"
        android:id="@+id/button"
        android:layout_below="@+id/phoneText"
        android:layout_alignLeft="@+id/phoneText"
        android:layout_alignStart="@+id/phoneText"
        android:layout_marginTop="60dp"
        android:onClick="addUser"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/button2"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:onClick="backFromAddUserComponents"/>


</RelativeLayout>